{
  "manifest_version": 3,
  "name": "Clear Terms",
  "version": "1.1.0",
  "description": "Analysez automatiquement les CGU et Politiques de Confidentialit√© avec l'IA",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icon/icon32.png",
      "64": "icon/icon64.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-script/config.js",
        "content-script/exclusions.js",
        "content-script/extraction.js",
        "content-script/detection.js",
        "content-script/toast.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://*/*",
    "https://*/*"
  ]
}
