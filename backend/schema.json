{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clear Terms Report",
  "type": "object",
  "required": ["schema_version", "site", "generated_at", "overall", "categories"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["1.0"] },
    "site": {
      "type": "object",
      "required": ["domain", "name", "source_url", "detected_language"],
      "properties": {
        "domain": { "type": "string" },
        "name": { "type": "string" },
        "source_url": { "type": "string" },
        "detected_language": { "type": "string" }
      }
    },
    "generated_at": { "type": "string", "format": "date-time" },
    "overall": {
      "type": "object",
      "required": ["score", "grade", "summary"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 100 },
        "grade": { "type": "string", "enum": ["A", "B", "C", "D", "E"] },
        "summary": { "type": "string" }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "status", "color", "rationale"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "status": { "type": "string", "enum": ["EVALUATED", "NA"] },
          "color": { "type": "string", "enum": ["GREEN", "AMBER", "RED"] },
          "low_confidence": { "type": "boolean" },
          "rationale": { "type": "string" },
          "bullets": { "type": "array", "items": { "type": "string" } },
          "citations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "quote": { "type": "string" },
                "section_hint": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "limits": {
      "type": "object",
      "properties": {
        "missing_sections": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" }
      }
    }
  }
}
